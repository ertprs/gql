{
  "name": "gql",
  "version": "1.0.67",
  "main": "src/index.ts",
  "license": "MIT",
  "private": true,
  "repository": "https://github.com/LeoFalco/gql",
  "workspaces": [
    "./"
  ],
  "scripts": {
    "clean": "npx lerna clean -y",
    "start-db": "npm run create-database",
    "pretest": "npm run create-database",
    "create-database": "npx dotenv -e .env.$(echo $ENVIRONMENT) -- npx ts-node bin/create-database.ts",
    "migrate-dev": "npx dotenv -e .env.$(echo $ENVIRONMENT) -- npx prisma migrate dev --preview-feature",
    "migrate": "npx dotenv -e .env.$(echo $ENVIRONMENT) -- npx prisma migrate deploy --preview-feature",
    "test": "npm run migrate && npm run jest",
    "jest": "npx dotenv -e .env.$(echo $ENVIRONMENT) -- npx jest --detectOpenHandles --forceExit",
    "start": "npm run migrate && npm run start-ts-node",
    "start-ts-node": "npx dotenv -e .env.$(echo $ENVIRONMENT) -- npx ts-node .",
    "postinstall": "npx dotenv -e .env.$(echo $ENVIRONMENT) -- npx prisma generate",
    "seed": "npx dotenv -e .env.$(echo $ENVIRONMENT) -- npx ts-node bin/seed",
    "nodemon": "npx dotenv -e .env.$(echo $ENVIRONMENT) -- npx nodemon",
    "start-dev": "npm run nodemon",
    "lint": "npx prettier --check ./**/**.* && npx eslint . --ext .js,.ts",
    "lint-fix": "npx prettier --write ./**/**.* && npx eslint . --ext .js,.ts --fix",
    "commit": "npx cz"
  },
  "dependencies": {
    "@prisma/cli": "2.13.1",
    "@prisma/client": "2.13.1",
    "@sentry/node": "5.29.0",
    "@sentry/tracing": "5.29.0",
    "apollo-boost": "0.4.9",
    "apollo-server": "2.19.0",
    "async": "3.2.0",
    "commitizen": "4.2.2",
    "cuid": "2.1.8",
    "dotenv": "8.2.0",
    "dotenv-cli": "4.0.0",
    "eslint-config-prettier": "7.0.0",
    "eslint-plugin-prettier": "3.2.0",
    "graphql": "15.4.0",
    "npm": "6.14.9",
    "pg": "8.5.1",
    "postinstall": "0.7.0",
    "sql-template-strings": "2.2.2",
    "ts-node": "9.1.1",
    "typescript": "4.1.2"
  },
  "devDependencies": {
    "@commitlint/cli": "11.0.0",
    "@commitlint/config-conventional": "11.0.0",
    "@sentry/cli": "1.60.1",
    "@types/cross-spawn": "6.0.2",
    "@types/jest": "26.0.18",
    "@types/node": "10.14.9",
    "@types/node-fetch": "2.5.7",
    "@types/pg": "7.14.7",
    "@typescript-eslint/eslint-plugin": "4.9.1",
    "@typescript-eslint/parser": "4.9.1",
    "apollo-server-testing": "2.19.0",
    "chalk": "4.1.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "7.15.0",
    "eslint-config-standard": "16.0.2",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jest": "24.1.3",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-standard": "5.0.0",
    "husky": "5.0.4",
    "jest": "26.6.3",
    "lerna": "3.22.1",
    "nodemon": "2.0.6",
    "prettier": "2.2.1",
    "rimraf": "3.0.2",
    "sucrase": "3.16.0",
    "supertest": "6.0.1",
    "ts-jest": "26.4.4",
    "tslint": "6.1.3"
  },
  "engines": {
    "node": ">=13.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
